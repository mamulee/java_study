package p02;

import java.util.Arrays;

public class BinarySearchEx {

	public static void main(String[] args) {
		
		try {
		int[] scores = {99, 97, 98};
		Arrays.sort(scores);
		int index = Arrays.binarySearch(scores,97);
		System.out.println("찾는 자료의 인덱스는 "+ index);
		System.out.println(scores[index]);
		
		String[] names = {"홍길동", "박동수", "김민수"};
		Arrays.sort(names);
		index = Arrays.binarySearch(names, "박동수");
		System.out.println("찾는 자료의 인덱스는 "+ index);
		System.out.println(names[index]);
		
		Member m1 = new Member("홍길동", "123456");
		Member m2 = new Member("이순신", "123456");
		
		
		} catch(ArrayIndexOutOfBoundsException e) {
			System.out.println("찾는 자료가 없습니다.");
		}
		
		
		
	}

}

class Member {
	int no;
	String name;
	String tel;
	
	Member() {
		
	}
	Member(int no, String name, String tel) {
		this.no = no;
		this.name = name;
		this.tel = tel;
	}
	
	private int compareTo(Member o) {
		return name.compareTo(o.name);
	}
	
}
