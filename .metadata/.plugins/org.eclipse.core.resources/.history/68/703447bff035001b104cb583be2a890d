class PrintThread1 extends Thread {
	private boolean stop;
	public voif setStop(boolean stop) {
		this.stop = stop;
	}
	
	@Override
	public void run() {
		while(!stop) {
			System.out.println("실행 중");
		}
		System.out.println("자원 정리 - 열려있는 네트워크 로그아웃, 데이터 베이스 close, 파일 close");
	}
}